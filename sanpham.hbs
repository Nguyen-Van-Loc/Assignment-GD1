{{#if severErr}}
<div class="alert alert-danger">
    {{severErr}}
</div>
{{/if}}
<div class="container py-3" data-bs-theme="dark">
    <div class="row px-3">
        <div class="col-md-2 d-none d-md-flex ">
            <a href="/trangchu" style="width: 40%;height: 100%;"><img src="/image/shopping-bag.png" class="img-fluid"
                    alt=""></a>
        </div>
        <div class="col-md-7" style="margin-top: 10px; nav">
            <nav class="navbar navbar-expand-lg bg-body-tertiary  border border-2 rounded-3">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/trangchu"><span class="bi bi-house-door-fill"></span> Trang
                        Chủ</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div style="margin-left: 10px;" class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/sanpham"><span
                                        class="bi bi-bag-check-fill"></span> Sản Phẩm</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="font-size: 20px;margin-top:20px">
            Danh sách Sản Phẩm
            <hr>
        </div>
        <div class="col-md-9">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Thêm Sản Phẩm
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm khách hàng</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/themsanpham" method="post" enctype="multipart/form-data">
                                <div class="text-center">
                                    <label style="width: 100px;" class=" text-center">
                                        <input type="file" style="display:none" name="anhsp" id="anh">
                                        <img src="https://cdn-icons-png.flaticon.com/256/4825/4825038.png"
                                            style="width: 100px;">
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label for="tensp" style="color: white;"> Tên Sản Phẩm </label>
                                    <input type="text" name="tensp" class="form-control" id="tensp"
                                        placeholder="Tên Sản Phẩm">
                                </div>
                                <div class="form-group">
                                    <label for="gia" style="color: white;"> Giá </label>
                                    <input type="number" min="0" F name="gia" class="form-control" id="gia"
                                        placeholder="Giá">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1" style="color: white;" class="form-label">Mô
                                        tả</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" name="mota"
                                        placeholder="Mô tả" rows="3"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Đóng</button>
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <form class="d-flex" role="search" action="/search" method="post">
                <input class="form-control me-2" id="search" type="search" placeholder="Search" aria-label="Search"
                    name="username">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
    <hr>
    <tbody>

        <div class="col-12">
           
            <div class="row ">
                 {{#each sanpham}}
                <div class="col-lg-3 col-md-6 ">
                    <div class=" col-12 rounded-3 border ">
                        <div class="text-center">
                            <img src="./image/{{this.image}}" style="margin-top: 10px; width: 100%;" alt="">
                        </div>
                        <h5 class="card-title" style="margin-top: ;">{{this.tensp}}</h5>
                        <p class="card-text">{{this.mota}}</p>
                        <h5 class="card-title">${{this.gia}}</h5>
                        <a href="#" class="btn btn-primary" style="margin-bottom: 20px;">Mua</a>
                    </div>
                </div>
                 {{/each}}
            </div>
           
        </div>

    </tbody>

</div>