<link rel="stylesheet" href="/public/style.css">
{{#if severErr}}
<div class="alert alert-danger">
    {{severErr}}
</div>
{{/if}}
 <div class="row">
    <code>{{loi}}</code>
  </div>
<div class="container">
    <div class="row px-3">
        <div class="col-lg-10 col-x1-9 card flex-row mx-auto px-0">
             <div class="img-left d-none d-md-flex">
                </div>
            <div class="card-body" style="padding: 2rem;">
                <h4 class=" text-center mt-4" style="margin-bottom: 2rem;">Đăng Nhập</h4>
                <form action="/dangnhap" method="post" class="form-box px-3">
                    <div class="form-input" style="position: relative;">
                        <span><i class="fa fa-envelope"></i></span>
                        <input type="email" name="email" placeholder="Email" tabindex="10" required>
                    </div>
                    <div class="form-input" style="position: relative;">
                        <span><i class="fa fa-key"></i></span>
                        <input type="password" name="password" placeholder="Mật Khẩu" required>
                    </div>
                    <div class="mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="cb1" name="">
                            <label for="cb1" class="custom-control-label">Lưu mật khẩu</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-block text-uppercase">Đăng nhập</button>
                    </div>
                    <div class="text-right"><a href="#" class="forget-link">Quên Mật Khẩu</a></div>
                    <hr class="my-4">
                    <div class="text-center mb-2">Bạn chưa có tài khoản ?<a href="/dangki" class="register-link"> Đăng Kí</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>